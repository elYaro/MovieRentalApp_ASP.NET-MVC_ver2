@model IEnumerable<MovieRentalApp_ASP.NET_MVC_ver2.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index Page for Movies</h2>
@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table-bordered table-hover">
        <thead>
            <tr>
                <th>All Movies</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.Id + " : " + movie.Name, "Details", "Movies", new { Id = movie.Id }, null);</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>

}




