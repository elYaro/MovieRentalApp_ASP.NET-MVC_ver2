@model MovieRentalApp_ASP.NET_MVC_ver2._1.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Random View</h2>

<h4>@Model.Movie.Name</h4>

@if (Model.Customers.Count == 0)
{
    <p>no customers yeat</p>
}

else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>
                @customer.Name
            </li>
        }
    </ul>

}





