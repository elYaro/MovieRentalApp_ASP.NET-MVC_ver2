@model IEnumerable<MovieRentalApp_ASP.NET_MVC_ver2._1.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <p>We do not have any movies yet on our store</p>
}

else
{
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movies</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var movie in Model)
               {
                   <tr>
                       <td>@Html.ActionLink(@movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                      
                   </tr>
               }
            </tbody>
        </table>
}

